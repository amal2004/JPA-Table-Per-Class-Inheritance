<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
 <hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">sha321</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/spring5</property>
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
        <property name="hbm2ddl.auto">create</property>
        <mapping class="com.hibernate.map.model.Bike"/>
        <mapping class="com.hibernate.map.model.Car"/>
        <mapping class="com.hibernate.map.model.Truck"/>
        <mapping class="com.hibernate.map.model.PassengerVehicle"/>
        <mapping class="com.hibernate.map.model.TransportationVehicle"/>
        <mapping class="com.hibernate.map.model.Vehicle"/>
    </session-factory>
</hibernate-configuration>